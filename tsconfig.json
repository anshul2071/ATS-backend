{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "commonjs",              
    "rootDir": "src",                  
    "outDir": "dist",                  
    "strict": true,                   
    "esModuleInterop": true,            
    "skipLibCheck": true,              
    "resolveJsonModule": true,          
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",         
    "allowJs": false                    
  },
  "include": ["src"],                   
  "exclude": ["node_modules", "dist"]   
}
